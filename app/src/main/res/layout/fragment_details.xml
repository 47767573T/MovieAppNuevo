<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:showIn="@layout/activity_details"
        tools:context="com.primapp.movieappnuevo.DetailsActivityFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/TVtitulo"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:minWidth="20dp"
            android:minHeight="20dp"
            android:layout_margin="2dp"
            android:autoText="false"
            android:gravity="center_horizontal"
            android:textSize="30dp"
            android:textIsSelectable="false"
            android:textColor="#5465ff" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivListPoster"
            android:minHeight="200dp"
            android:longClickable="false"
            android:padding="5dp"
            android:minWidth="200dp"
            android:layout_below="@+id/TVtitulo"
            android:layout_toRightOf="@+id/TVsinopsis" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="estreno"
            android:id="@+id/TVestreno"
            android:layout_below="@+id/ivListPoster"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/TVtitulo"
            android:layout_alignEnd="@+id/TVtitulo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="popularidad"
            android:id="@+id/TVpopularidad"
            android:layout_below="@+id/TVestreno"
            android:layout_alignLeft="@+id/TVtitulo"
            android:layout_alignStart="@+id/TVtitulo"
            android:layout_alignRight="@+id/TVestreno"
            android:layout_alignEnd="@+id/TVestreno" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="sinopsis"
            android:id="@+id/TVsinopsis"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/TVpopularidad" />
    </RelativeLayout>

</ScrollView>